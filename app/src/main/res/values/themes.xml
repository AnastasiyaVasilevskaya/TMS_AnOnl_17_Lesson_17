<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Spoon" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Spoon" parent="Base.Theme.Spoon" />

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="color">#262627</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="TitleText_hint" parent="TitleText">
        <item name="android:textSize">13sp</item>
    </style>


    <style name="Button">
        <item name="android:background">@drawable/button_selector</item>
        <item name="backgroundTint">#468D8F91</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:text">Мерка</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#262627</item>
    </style>

    <style name="SmallSpoonButton" parent="Button">
        <item name="android:text">@string/small_spoon</item>
    </style>

    <style name="BigSpoonButton" parent="Button">
        <item name="android:text">@string/big_spoon</item>
    </style>

    <style name="GlassButton" parent="Button">
        <item name="android:text">@string/glass</item>
    </style>

    <style name="HelpButton">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:background">@drawable/info</item>
    </style>

    <style name="FavoriteButton" parent="HelpButton">
        <item name="android:background">@drawable/favorite</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">22dp</item>
    </style>

    <style name="SaveButton" parent="FavoriteButton">
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:background">@drawable/save</item>
    </style>


</resources>